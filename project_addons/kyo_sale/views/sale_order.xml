<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="kyo_sale_order_view_form" model="ir.ui.view">
            <field name="name">kyo.sale.order.view.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='preview_sale_order']" position="before">
                    <button string="Spreadsheet" class="oe_stat_button" name="open_spreadsheet" type="object" icon="fa-file-text-o"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
